{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "esnext",
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["./**/test-setup.ts", "./setup-jest.js"],
  "include": [
    "jest.config.ts",
    "./**/*.test.ts",
    "./**/*.spec.ts",
    "./**/*.d.ts"
  ]
}
