    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "modules/shared/util/**/*.ts",
          "modules/shared/util/**/*.html"
        ]
      }
    }
  }
}
